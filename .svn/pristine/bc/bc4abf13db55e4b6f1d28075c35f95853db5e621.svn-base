/* CSS Document */
body {
	background-image: url(../images/body.jpg);
	background-position: top;
	font-family: Tahoma, Geneva, sans-serif;
}
div#container {
	width: 1000px;
	min-height: 1000px;
	margin-left: auto;
	margin-right: auto;	
}
div#title {
	height: 50px;
	line-height: 50px;
	color: #fff;
	font-size: 35px;
	margin-bottom: 10px;
	
}
div#header {
	background-image: url(../images/header.jpg);
	background-position: top;
	height: 500px;
	width: 1000px;
	margin-bottom: 25px;
}
div#body {
	background-color: #fff;
	min-height: 500px;
	margin-bottom: 10px;
}
div#footer {
	height: 25px;
	line-height: 25px;
	text-align: center;
	color: #999;
}
.rounded {
	-moz-border-radius: 10px;
	border-radius: 10px;	
}
.transparent {
	zoom: 1;
	filter: alpha(opacity=50);
	opacity: 0.5;
}
.shadow {
	box-shadow: 1px 1px 15px 1px #000;
}
.text-shadow {
	text-shadow: 3px 3px 5px #000;	
}