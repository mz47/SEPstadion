/* CSS Document */
body {
	background-image: url("#{resource['images/body.jpg']}");
	background-position: top;
	font-family: Tahoma, Geneva, sans-serif;
}
div#container {
	width: 1000px;
	min-height: 1000px;
	margin-left: auto;
	margin-right: auto;	
}
div#title {
	height: 50px;
	line-height: 50px;
	color: #fff;
	font-size: 35px;
	position: relative;
	top: 20px;
        width: 100%;
        background-color: #162a4f;
        background: rgba(22, 42, 79, 0.85);
}
#title a:link {
        color: #fff;
}
#title a:visited {
        color: #fff;
}
#title a:visited {
        color: #fff;
}
div#header {
	background-image: url("#{resource['images/header.jpg']}");
	background-position: top;
	height: 500px;
	width: 1000px;
	margin-bottom: 25px;
}
div#body {
	min-height: 500px;
	margin-bottom: 10px;
        padding: 25px;
        background: rgba(255, 255, 255, 0.6);
}
div#footer {
	height: 25px;
	line-height: 25px;
	text-align: center;
	color: #999;
}
.rounded {
	-moz-border-radius: 10px;
	border-radius: 10px;	
}
.shadow {
	box-shadow: 1px 1px 15px 1px #000;
}
.text-shadow {
	text-shadow: 3px 3px 5px #000;	
}
div#stadion {
    margin-top: 20px;
    float: left;
}
.block {
    width: 120px;
    height: 120px;
    background-color: #162a4f;
    position: relative;
    float: left;
    margin-right: 30px;
    color: #fff;
    line-height: 50px;
    text-align: center;
    cursor: pointer;
}
.block:hover {
    background-color: #162a40;
}
#block-w {
    top: 150px;
    left: -450px;
}
#block-o {
    top: 150px;
    left: -300px;
}
#block-sw {
    top: 300px;
    left: -750px;
}
#block-s {
    top: 180px;
    left: 150px;
}
#block-so {
    top: 180px;
    left: 150px;
}
div#stadion-info {
    float: right;
    height: 420px;
    width: 420px;
    position: relative;
    top: -240px;
    left: -10px;
}