/* CSS Document */
body {
    background-image: url("#{resource['images/body.jpg']}");
    background-repeat: no-repeat;
    background-color: #040F24;
    background-position: top;
    font-family: Tahoma, Geneva, sans-serif;
}
a:link {
    color: #000;
}
a:visited {
    color: #000;
}
div#container {
    width: 1000px;
    min-height: 1000px;
    margin-left: auto;
    margin-right: auto;	
}
div#title {
    height: 50px;
    line-height: 50px;
    color: #fff;
    font-size: 35px;
    position: relative;
    top: 20px;
    width: 100%;
    background-color: #162a4f;
    background: rgba(22, 42, 79, 0.85);
}
#title a:link {
    color: #fff;
}
#title a:visited {
    color: #fff;
}
div#title-debug {
    visibility: visible;
    color: #fff;
    font-size: 12px;
    background-color: #333;
    width: 250px;
    position: relative;
    left: 750px;
    top: 50px;
}
#title-debug a:link {
    color: #fff;
}
#title-debug a:visited {
    color: #fff;
}
div#header {
    background-image: url("#{resource['images/header.jpg']}");
    background-position: top;
    height: 500px;
    width: 1000px;
    margin-bottom: 25px;
}
div#body {
    min-height: 500px;
    margin-bottom: 10px;
    padding: 25px;
    background: rgba(255, 255, 255, 0.6);
    overflow: hidden;
}
div#footer {
    height: 25px;
    line-height: 25px;
    text-align: center;
    color: #999;
}
div#footer a:link {
    color: #999;
}
div#footer a:visited {
    color: #999;
}
.rounded {
    -moz-border-radius: 10px;
    border-radius: 10px;	
}
.shadow {
    box-shadow: 1px 1px 15px 1px #000;
}
.text-shadow {
    text-shadow: 3px 3px 5px #000;	
}
div#stadion-info {
    float: right;
    height: 420px;
    width: 420px;
    position: relative;
    top: -240px;
    left: -10px;
}
input[type=text]
{
    width: 350px;
}
input[type=password]
{
    width: 350px;
}
select {
    width: 100px;
}
textarea
{
    width: 350px;
    height: 150px;
}
.gridCol
{
    width: 250px;
}
.gridRow
{
    vertical-align: top;
}
.error {
    color: #ff0000;
}