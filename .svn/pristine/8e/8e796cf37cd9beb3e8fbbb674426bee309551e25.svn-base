    public static int getNumberOfOccupiedSeats()
    {
        if(stadiums != null)
        {
            if(stadiums.size() > 0)
            {
                int counter = 0;
                for(stadium s : stadiums)
                {
                    for(block b : s.getBlocks())
                    {
                        for(seat s_0 : b.getCat_0().getSeats())
                        {
                            if(s_0.isOccupied())
                            {
                                counter++;
                            }
                        }
                        for(seat s_1 : b.getCat_1().getSeats())
                        {
                            if(s_1.isOccupied())
                            {
                                counter++;
                            }
                        }
                        for(seat s_2 : b.getCat_2().getSeats())
                        {
                            if(s_2.isOccupied())
                            {
                                counter++;
                            }
                        }
                    }
                }
                return counter;
            }
            else
            {
                return -1;
            }
        }
        else
        {
            return -1;
        }
    }
    
